{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "outDir": "./build",
    "typeRoots": ["src/@types", "./node_modules/@types"]
  },
  "include": ["src/**/*", "src/configs", "src/@types"],
  "exclude": ["node_modules"]
}
